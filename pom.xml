	<scm>
		<connection>scm:git:git@github.com:got5/tapestry-angular2.git</connection>
		<developerConnection>scm:git:git@github.com:got5/tapestry-angular2.git</developerConnection>
		<url>git@github.com:got5/tapestry5-angular2.git</url>
	</scm>
